<div class="row mt-5">
    <div class=" col-5 d-flex align-items-center">
      <%= image_tag user.image.url, alt: "icon", class: "big_icon rounded-circle" %>
    </div>
    <aside class="col-6">
      <h2><%= user.name %></h2>
      <div class="d-flex justify-content-end mt-5">
        <% if current_user == user %>
          <%= link_to edit_user_path(user) do %>
            <i class="fa fa-user-cog fa-2x"></i>
          <% end %>
        <% end %>
        <%= render 'relationships/follow_button', user: user %>
      </div>
    </aside>
    <ul class="user_list list-unstyled mt-4 mb-5">
      <li>
        <p>投稿</p>
        <div class="badge">
          <%= @count_posts %>
        </div>
      </li>
      <li>
        <p>フォロー</p>
        <div class="badge">
          <%= link_to followings_user_path(user) do %>
            <%= @count_followings %>
          <% end %>
        </div>
      </li>
      <li>
        <p>フォロワー</p>
        <div class="badge">
          <%= link_to followers_user_path(user) do %>
            <%= @count_followers %>
          <% end %>
        </div>
      </li>
    </ul>
</div>