<div class="row">
  <div class="col-md-5">
    <%= render 'users', user: @user %>
  </div>
  <div class="col-md-6">
    <ul class="nav nav-tabs nav-justified mt-sm-5 mb-5">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>"><i class="far fa-images fa-lg" aria-hidden="true"></i></a></li>
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>"><i class="fas fa-heart fa-lg" aria-hidden="true"></i></a></li>
    </ul>
     <% if @favorites.any? %>
      <div class="row">
        <% @favorites.each do |favorite| %>
          <div class="col-4">
            <div class="thumbnail mb-3">
              <%= link_to post_path(favorite) do %>
                <%= image_tag favorite.image.url, alt: "image", class: "img-fluid" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>