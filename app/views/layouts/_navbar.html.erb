<header class="mb-2">
  <nav class="navbar navbar-expand-sm navbar-light">
    
    <% if logged_in? %>
        <a class="title navbar-brand" href="/">Sweetphoto</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item nav-link"><%= link_to current_user.name, user_path(current_user) %></li>
          <li class="nav-item nav-link">通知</li>
          <li class="nav-item nav-link"><%= link_to 'ログアウト', logout_path, method: :delete %></li>
        </ul>
      </div>
    <% else %>
      <div class="ml-auto mr-auto">
        <h2 class="title">Sweetphoto</h2>    
      </div>
    <% end %> 
  </nav>
</header>