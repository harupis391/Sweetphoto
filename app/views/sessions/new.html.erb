<div class="row">
  
    
  <div class="card col-sm-5 offset-sm-2">
    <div class="card-body">
        <h3 class="card-title text-center">ログイン</h3>
        
         <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        
          <div class="card-text form-group">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
    
          <div class="card-text form-group">
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          
          <div class="card-link text-center">
          <%= f.submit 'ログイン', class: 'btn btn-primary rounded-pill' %>
          </div>
        <% end %>
    </div>
  </div>
        
  <aside class="col-sm-5 text-center mt-sm-auto mb-sm-auto">
        <p>アカウントを持っていない方</p>
        <%= link_to '新規で登録する', signup_path, class: 'btn btn-light' %>
  </aside>
</div>